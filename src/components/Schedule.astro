---
import { Image } from "astro:assets";
import riseImg from "../assets/pictures/ritual-rise.png";
import setImg from "../assets/pictures/ritual-set.png";
import sleepImg from "../assets/pictures/ritual-sleep.png";

const rituals = [
    {
        time: "07:00 AM",
        title: "Rise gently",
        description:
            "Forget jarring alarms. Amber brings the sunrise to your bedside, gradually filling the room with light to naturally suppress melatonin. Start your day feeling restored, alert, and ready to see what’s coming.",
        image: riseImg,
    },
    {
        time: "11:00 PM",
        title: "Set the scene, prepare for rest",
        description:
            "Transform your bedroom into a sanctuary. As the day ends, the light shifts to a warm, blue-free amber glow that signals your body it’s time to rest. Perfect for reading, meditating, or simply disconnecting.",
        image: setImg,
    },
    {
        time: "03:00 AM",
        title: "Sleep undisturbed",
        description:
            "True rest requires darkness. The display vanishes into the wood, leaving no visual noise. In the background, invisible sensors silently guard your sleep quality and air environment, without you ever noticing.",
        image: sleepImg,
    },
];
---

<section class="pt-7xl">
    <div class="flex flex-col gap-3xl md:border-b md:border-border-primary">
        <h2 class="title-2xl text-text-primary px-container">
            Your Daily Ritual
        </h2>

        <div class="flex flex-col px-container md:px-0 gap-2xl md:gap-0">
            {
                rituals.map((ritual) => (
                    <div class="relative grid grid-cols-1 md:grid-cols-2 md:border-t md:border-border-primary overflow-visible gap-lg md:gap-0">
                        <div class="relative w-full h-md md:h-140 overflow-visible group">
                            <Image
                                src={ritual.image}
                                alt={ritual.title}
                                class="w-full h-full object-cover rounded-medium md:rounded-none"
                                width={1200}
                                height={800}
                            />

                            <div class="absolute bottom-sm left-xs md:left-auto md:bottom-auto md:right-0 md:top-1/2 md:translate-x-1/2 md:-translate-y-1/2 z-20 bg-surface-primary border border-border-secondary rounded-medium py-xs body-lg font-semibold w-40 text-center shadow-sm">
                                {ritual.time}
                            </div>
                        </div>

                        <div class="flex flex-col justify-center md:pl-8xl md:pr-container gap-sm md:py-2xl">
                            <h3 class="title-lg text-text-primary">
                                {ritual.title}
                            </h3>
                            <p class="body-md text-text-primary">
                                {ritual.description}
                            </p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
