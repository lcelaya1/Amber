---
interface Props {
  text: string;
  href?: string;
  variant?: "primary" | "secondary" | "tertiary";
  class?: string;
  id?: string;
  type?: "button" | "submit";
}

const {
  text,
  href,
  variant = "primary",
  class: className,
  id,
  type = "button",
} = Astro.props;

const Element = href ? "a" : "button";

const baseStyles =
  "inline-block px-xs py-3xs rounded-xlarge transition-all duration-500 body-sm text-center border w-fit focus:outline-none cursor-pointer active:scale-95";

const variants = {
  primary:
    "border-border-primary-invert text-text-primary-invert hover:bg-button-primary-hover hover:text-text-primary",
  secondary:
    "bg-button-secondary border-button-secondary text-text-primary-invert hover:bg-button-secondary-hover hover:border-button-secondary-hover",
  tertiary:
    "border-border-secondary text-text-primary hover:bg-button-tertiary-hover hover:text-text-primary-invert",
};
---

<Element
  id={id}
  href={href}
  type={href ? undefined : type}
  class:list={[baseStyles, variants[variant], className]}
>
  {text}
</Element>
