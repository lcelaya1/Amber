---
import "../styles/global.css";

interface Props {
  title: string;
  description?: string;
  image?: string;
}

const {
  title,
  description = "Restore your natural rhythm with circadian light and invisible sensing. Designed for distraction-free sleep.",
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />

    <link
      rel="preload"
      as="image"
      href="/_astro/hero-desktop-image.webp"
      media="(min-width: 640px)"
    />
  </head>
  <body
    class="bg-surface-primary antialiased selection:bg-button-secondary selection:text-text-primary-invert"
  >
    <slot />
  </body>
</html>
