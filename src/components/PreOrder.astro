---
import { Image } from "astro:assets";
import preOrderBg from "../assets/pictures/preorder-bg.png";
import Button from "./Button.astro";

const inclusions = [
    "Amber Sleep Hub",
    "Lifetime App Access (No Subscription)",
    '30-Night "Sleep on it" Guarantee',
];
---

<section
    class="relative w-full min-h-screen flex items-center md:items-end justify-center md:justify-end px-container overflow-hidden py-xl"
>
    <picture class="absolute inset-0 z-0">
        <source media="(min-width: 768px)" srcset={preOrderBg.src} />
        <img
            src={preOrderBg.src}
            alt=""
            role="presentation"
            class="w-full h-full object-cover object-right md:object-center"
            loading="lazy"
        />
    </picture>

    <div
        class="relative z-10 bg-surface-primary w-full md:w-5/12 py-lg px-md rounded-medium flex flex-col gap-md shadow-2xl"
    >
        <div class="block md:hidden w-full h-72 overflow-hidden rounded-medium">
            <Image
                src={preOrderBg}
                alt="Amber Product Detail"
                class="w-full h-full object-cover"
                width={600}
                height={400}
            />
        </div>

        <div class="flex flex-col gap-2xs">
            <h2 class="title-lg text-text-primary">Pre-order Amber</h2>
            <p class="body-sm text-text-primary hidden md:block">
                Be among the first to invite Amber into your home.
            </p>

            <hr class="border-border-primary" />

            <div class="flex flex-col gap-4xs body-sm text-text-primary">
                <p class="font-medium">Includes:</p>
                <ul class="flex flex-col gap-4xs list-none p-0">
                    {
                        inclusions.map((item) => (
                            <li class="flex items-center gap-4xs">
                                <svg
                                    width="12"
                                    height="13"
                                    viewBox="0 0 12 13"
                                    fill="none"
